{
  "private": true,
  "license": "UNLICENSED",
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "commander": "^2.20.0",
    "cpy": "^7.2.0",
    "eslint": "6.0.1",
    "@contentful/eslint-config-extension": "0.2.0",
    "eslint-plugin-node": "9.1.0",
    "husky": "^3.0.0",
    "fs-extra": "8.1.0",
    "lerna": "^3.15.0",
    "lint-staged": "^9.0.1",
    "log-symbols": "^2.2.0",
    "make-dir": "^2.1.0",
    "netlify": "^2.4.6",
    "ora": "^3.4.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "bootstrap": "lerna bootstrap",
    "prettier": "prettier marketplace/**/*.{js,jsx,ts,tsx} scripts/**/*.js --write --ignore-path .gitignore",
    "prettier-check": "prettier marketplace/**/*.{js,jsx,ts,tsx} scripts/**/*.js --check --ignore-path .gitignore",
    "build": "lerna run build --concurrency 2 -- -- --no-inline && node ./scripts/build.js",
    "deploy": "node ./scripts/deploy.js",
    "lint": "eslint marketplace scripts --ext .js,.ts,.tsx --ignore-path .gitignore",
    "tsc": "lerna run tsc --stream",
    "test:coverage": "lerna run test:coverage"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-path .gitignore",
      "eslint --fix --ignore-path .gitignore",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "name": "extensions"
}
